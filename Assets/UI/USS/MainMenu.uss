.mm-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    
    /*background-color: var(--mm-color-bg);*/
    color: var(--mm-color-white);
    background-color: rgba(16, 11, 5, 0);
    
    width: 200px;
    height: 100px;
    
    border-width: 0;
}

.mm-btn:hover {
    transition: background-color 0.3s ease, color 0.3s ease, margin-left 0.3s ease, opacity 0.3s ease;
    color: var(--mm-color-white);
    background-color: rgba(16, 11, 5, 0);
    margin-left: 100px;
}

.mm-btn:active {
    color: #56BFEB;
}