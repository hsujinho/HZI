:root {
    --mm-color-white: #FEF9FD;
    --mm-color-bg: #100B05;
    --mm-color-main: #5A4C49;
    --mm-color-mainlight: #978989;
    --mm-color-sub: #5E5C5F;
    --mm-color-accent: #E0C085;
}

.mm-page {
    width: 100%;
    height: 100%;
    background-image: url("../../Resources/mask.png");
}

.mm-r-aside {
    padding-top: 100px;
    width: 25%;
    /*background-color: var(--mm-color-bg);*/
    display: flex;
    flex-direction: column;
    flex: auto;
    align-items: center;
    justify-content: flex-start;
}

